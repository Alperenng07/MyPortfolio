@using Entities
@model Entities.Project

<div class="myCard">
    <div class="col-md-12">
        <!-- general form elements -->
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Proje Düzenle</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form asp-controller="Project" asp-action="Update" method="post">
                <div class="card-body">


                    <div class="form-group">
                        <label for="Name">Proje Adı:</label>
                        <input name="Name" value="@Model.Name" type="text" class="form-control" id="Name" placeholder="Proje Adı">
                    </div>

                    <div class="form-group">
                        <label for="Description">Acıklama:</label>
                        <input name="Description" value="@Model.Description" type="text" class="form-control" id="Description" placeholder="Acıklama">
                    </div>
                    <div class="form-group">
                        <label for="img">Photo:</label>
                        <input name="img" value="@Model.img" type="text" class="form-control" id="img" placeholder="Photo">
                    </div>


                </div>
                <!-- /.card-body -->
                <div class="card-footer">
                    <a type="button" href="@Url.Action("Index", "Project")" class="btn btn-primary">Geri</a>
                    <button type="submit" class="btn btn-success">Düzenle</button>
                </div>
            </form>
        </div>
        <!-- /.card -->
    </div>
</div>
<style>
    .myCard {
        width: 1200px;
        height: 200px;
        padding-left: 250px;
    }
</style>
