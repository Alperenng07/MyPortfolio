<div class="myCard">
    <div class="col-md-12">
        <!-- general form elements -->
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Tecrube Ekle</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form asp-controller="Experience" asp-action="Create" method="post">
                <div class="card-body">
                

                    <div class="form-group">
                        <label for="Name">Sirket Adı</label>
                        <input name="Name" type="text" class="form-control" id="Name" placeholder="Sirket Adı">
                    </div>

                    <div class="form-group">
                        <label for="Description">Acıklama</label>
                        <input name="Description" type="text" class="form-control" id="Description" placeholder="Acıklama">
                    </div>
                    <div class="form-group">
                        <label for="Year">Sure(Yıl)</label>
                        <input name="Year" type="text" class="form-control" id="Year" placeholder="0-1">
                    </div>

                </div>
                <!-- /.card-body -->
                <div class="card-footer">
                    <a type="button" href="Index" class="btn btn-primary">Geri</a>
                    <button type="submit" class="btn btn-success">Kaydet</button>
                </div>
            </form>
        </div>
        <!-- /.card -->
    </div>
</div>
<style>
    .myCard {
        width: 1200px;
        height: 200px;
        padding-left: 250px;
    }
</style>
