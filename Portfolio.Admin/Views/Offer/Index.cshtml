@using Entities
@model IEnumerable<Offer>


<div class="myCard">
   
    <div class="col-12">
        <div class="card">
            <!-- /.card-header -->
            <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                    <thead>
                        <tr>

                            <th>ID</th>
                            <th>Acıklama</th>


                            <th style="width: 20%; text-align: center">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            foreach (var item in Model)
                            {
                                <tr>

                                    <td>@item.Id</td>
                                    <td>@item.Description </td>


                                    <td class="project-actions text-right">
                                        <a href="@Url.Action("Detail", "Offer", new {id = item.Id})" class="btn btn-primary btn-sm">
                                            <i class="fas fa-folder"></i>Detay
                                        </a>
                                       
                                        <form style="display: inline-block" asp-action="Delete" asp-route-id="@item.Id" method="post">
                                            <button type="submit" class="btn btn-danger btn-sm"><i class="fas fa-trash"></i>Sil</button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>


</div>


<style>
    .myCard {
        width: 1200px;
        height: 200px;
        padding-left: 250px;
    }
</style>

