@using Entities
@model Entities.Offer

<div class="myCard">
    <div class="col-md-12">
        <!-- general form elements -->
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Dil Düzenle</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form asp-controller="Offer" asp-action="Update" method="post">
                <div class="card-body">



                    <div class="form-group">
                        <label for="name">Yetenek Adı:</label>
                        <input name="name" value="@Model.Description" type="text" class="form-control" id="name" placeholder="Yetenek Adı">
                    </div>

                    <div class="form-group">
                        <label for="Level">Seviye:</label>
                        <input name="Level" value="@Model.Content" type="text" class="form-control" id="Level" placeholder="Seviye">
                    </div>
                    <div class="form-group">
                        <label for="Score">Skor:</label>
                        <input name="Score" value="@Model.Price" type="text" class="form-control" id="Score" placeholder="Skor">
                    </div>


                </div>
                <!-- /.card-body -->
                <div class="card-footer">
                    <a type="button" href="@Url.Action("Index", "Offer")" class="btn btn-primary">Geri</a>
                    <button type="submit" class="btn btn-success">Düzenle</button>
                </div>
            </form>
        </div>
        <!-- /.card -->
    </div>
</div>
<style>
    .myCard {
        width: 1200px;
        height: 200px;
        padding-left: 250px;
    }
</style>
